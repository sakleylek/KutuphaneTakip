@model KütüphaneTakip.Core.Entites.Category

@{
    ViewData["Title"] = "EditCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Güncelle</h2>
<br />

@using(Html.BeginForm("UpdateCategory" , "Admin", FormMethod.Post))
{
    <div class="container">
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-5">
					<div class="login-wrap p-4 p-md-5">
						<form method="post">
                            <div class="d-none">
                                @Html.LabelFor(m => m.Id)
                                @Html.TextBoxFor(m => m.Id)
                            </div>
							<div class="form-group ">
                                @Html.Label("Kategori")
                                @Html.TextBoxFor(m =>m.CategoryName, new { @class="form-control" })
							</div>
							<div class="row justify-content-center">
								<button type="submit" class="btn btn-primary submit mb-4 mr-4 justify-content-center">Kaydet</button>
							</div>
						  </form>
	        </div>
				</div>
			</div>
		</div>
}
