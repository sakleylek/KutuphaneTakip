@using KütüphaneTakip.Core.Entites
@model Book
@{
	ViewData["Title"] = "NewBook";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Yeni Kitap</h2>

<div class="container">
	<div class="row justify-content-center">
		<div class="col-md-6 col-lg-5">
			<div class="login-wrap p-4 p-md-5">
				<form method="post">
					<div class="form-group ">
						<label for="InputName">İsim</label>
						<input type="text" name="Name" class="form-control" id="InputName" placeholder="İsim Giriniz" required="">
					</div>
					<div class="form-group ">
						<label for="InputDescription">Açıklama</label>
						<textarea name="Description" class="form-control" id="InputDescription" placeholder="Açıklama Giriniz" required=""></textarea>
					</div>					
					<div class="form-group ">
						<fieldset>
							<label>Yazar</label>
							@Html.DropDownListFor(x => x.AuthorId, (IEnumerable<SelectListItem>) ViewBag.Authors, new { @class="form-control" })
						</fieldset>
					</div>
					<div class="form-group ">
						<fieldset>
							<label>Kategori</label>
							@Html.DropDownListFor(x => x.CategoryId, (IEnumerable<SelectListItem>) ViewBag.Categories, new { @class="form-control" })
						</fieldset>
					</div>
					<div class="row justify-content-center">
						<button type="submit" class="btn btn-primary submit mb-4 mr-4 justify-content-center">Kaydet</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>